{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",

    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "types": ["node"],

    "sourceMap": true,

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,

    "verbatimModuleSyntax": false,
    "moduleDetection": "auto"
  }
}
