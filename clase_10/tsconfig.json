{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",

    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",

    "types": ["node"],

    "strict": true,
    "esModuleInterop": true,

    "sourceMap": true,
    "skipLibCheck": true,

    "verbatimModuleSyntax": false,
    "moduleDetection": "auto",

    "resolveJsonModule": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
